<%= link_to t(".add"), new_lesson_path,
  class: "btn btn-primary" %>
<table>
  <tr>
    <th><%= t ".category" %></th>
    <th><%= t ".course" %></th>
    <th><%= t ".name" %></th>
    <th><%= t ".description" %></th>
    <th><%= t ".image" %></th>
    <%= render "layouts/table_header" %>
  </tr> 
  <% @lessons.each do |lesson| %>
    <tr>
      <td><%= lesson.course.name %></td>
      <td><%= lesson.course.category.name %></td>
      <td><%= lesson.name %></td>
      <td><%= lesson.description %></td>
      <td class="img-medium">
        <%= image_tag lesson.image.url if lesson.image? %>
      </td>
      <td class="index_column">
        <%= link_to t(".edit"), edit_lesson_path(lesson) %>
      </td>
      <%= render "layouts/table_row", obj: lesson,
        path: :lesson_path %>
    </tr>
  <% end %>
</table>
<%= paginate @lessons, theme: "twitter-bootstrap-3" %>