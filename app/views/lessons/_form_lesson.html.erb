<%= form_for @lesson, html: {multipart: true} do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <%= f.label :course %>
  <br>
  <%= f.select:course_id, Course.all.map{ |c| [c.name, c.id] },
    include_blank: t(".chose_category") %>
  <br/><br/>
  <%= f.label :name %>
  <%= f.text_field :name, class: "form-control" %>

  <%= f.label :description %>
  <%= f.text_field :description, class: "form-control" %> 
  
  <%= f.label :image %>
  <div class="img-medium">
    <%= image_tag @lesson.image.url if @lesson.image? %>
  </div>
  <%= f.file_field :image, accept: "image/jpeg,image/gif,image/png",
    class: "form-control" %>
  <%= f.submit yield(:submit), class: "btn btn-primary" %>
<% end %>