<%= form_for question, html: {multipart: true} do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <%= f.label :category_id %><br/>
  <%= f.select :category_id, @categories.map{|c| [c.name, c.id]},
    include_blank: t(".chose_category"),
    selected: t(".chose"), class: "cate" %>
  <br/><br/>
  <%= f.label "Question" %>
  <%= f.text_field :content, class: "form-control question_content" %> 
  <br/>
  <%= f.label "Content" %>
  <%= f.text_field :meaning, class: "form-control question_meaning" %>
  <br/>
  <h3>Answers</h3>
  <%= f.fields_for :answers do |builder| %>
    <%= render "answer_fields", f: builder %>
  <% end %>
  <div class="links">
    <%= link_to_add_association 'Add new answers', f, :answers,
      class: "add_answer" %>
  </div>
  <%= f.submit yield(:submit), class: "btn btn-primary add_question" %>
<% end %>
