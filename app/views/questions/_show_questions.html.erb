<%= link_to t(".add"), new_question_path, data: {turbolinks: false},
  class: "btn btn-primary" %>
<table>
  <tr>
    <th><%= t ".category" %></th>
    <th><%= t ".meaning" %></th>
    <th><%= t ".content" %></th>
    <th><%= t ".edit" %></th>
    <th><%= decide_action %></th>
  </tr>
  <% @questions.each do |question| %>
    <tr>
      <td><%= question.category.name %></td>
      <td><%= question.meaning %></td>
      <td><%= question.content %></td>
      <td class="index_column">
        <%= link_to t(".edit"), edit_question_path(question) %>
      </td>
      <%= render "layouts/table_row", obj: question,
        path: :question_path %>
    </tr>
  <% end %>  
</table>
<%= paginate @questions, theme: "twitter-bootstrap-3" %>
