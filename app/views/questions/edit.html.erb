<% provide :title, t(".edit") %>
<h1><%= t ".edit" %></h1>
<%= render "layouts/menu" %>
<div class="row">
  <div class="col-md-9">
    <%= form_for @question, html: {multipart: true} do |f| %>
      <%= render "shared/error_messages", object: f.object %>
      <%= f.label :category_id %>
      <br>
      <%= f.select :category_id, Category.all.map{|c| [c.name, c.id]},
        include_blank: t(".chose"), selected: t(".chose") %>
      <br><br>
      
      <%= f.label :meaning %>
      <%= f.text_field :meaning, class: "form-control" %>

      <%= f.label :content %>
      <%= f.text_field :content, class: "form-control" %> 
      
      <%= f.submit t(".update"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
