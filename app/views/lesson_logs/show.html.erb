<div class="container margin-top-100">
  <% if @lesson_log.pass.nil? %>
    <center>
      <div id="clockdiv" class="clockdiv">
        <div>
          <span class="days"></span>
          <div class="smalltext">
            <%= t ".day" %>
          </div>
        </div>
        <div>
          <span class="hours"></span>
          <div class="smalltext">
            <%= t ".hours" %>
          </div>
        </div>
        <div>
          <span class="minutes"></span>
          <div class="smalltext">
            <%= t ".minute" %>
          </div>
        </div>
        <div>
          <span class="seconds"></span>
          <div class="smalltext">
            <%= t ".second" %>
          </div>
        </div>
      </div>
    </center>
    <%= form_for :questionlog, method: :patch, html: {name: "go"} do |f| %>
      <% i = 0 %>
      <% j = 0 %>
      <% flag = true %>
      <% @questions.each do |q| %>
        <% next if q.answers.size < 2 %>
        <div>

          <% if flag %>
            <b><%= i += 1 %>. <%= q.content %></b>
            <% flag = false %>
          <% end %>

          <% if q.answers.select {|a| a.correct == true}.size == 1 %>
            <% if q.id == @qls[j].question_id %>
              <li class="answer">
                <% if @qls[j].number %>
                  <%= f.radio_button q.id,
                    @qls[j].id, checked: true %>
                <% else %>
                  <%= f.radio_button q.id,
                    @qls[j].id %>
                <% end %>
                <%= f.label "#{q.id}_#{@qls[j].id}",
                  @qls[j].answer.content %>
              </li>
              <% j += 1 %>
              <% redo unless j == @qls.size %>
            <% else %>
              <% flag = true %>
            <% end %>
          <% else %>
            <% if q.id == @qls[j].question_id %>
              <li class="answer">
                <% if @qls[j].number %>
                  <%= f.check_box q.id,
                    @qls[j].id, checked: true %>
                <% else %>
                  <%= f.check_box @qls[j].id %>
                <% end %>
                <%= f.label "#{q.id}_#{@qls[j].id}",
                  @qls[j].answer.content %>
              </li>
              <% j += 1 %>
              <% redo unless j == @qls.size %>
            <% else %>
              <% flag = true %>
            <% end %>
          <% end %>
        </div>
        <br/>
      <% end %>
      <%= f.submit t(".finish"), class: "btn btn-primary", id: "finish" %>
      <%= f.submit t(".save"), class: "btn btn-primary", id: "save" %>
      
    <% end %>
  <% else %>
    <%= render "history" %>
  <% end %>
</div>
