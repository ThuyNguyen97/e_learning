<%= link_to t(".add"), new_course_path,
  class: "btn btn-primary" %>
<table>
  <tr>
    <th><%= t ".category" %></th>
    <th><%= t ".name" %></th>
    <th><%= t ".description" %></th>
    <th><%= t ".image" %></th>
    <%= render "layouts/table_header" %>
  </tr>
  <% @courses.each do |course| %>
    <tr>
      <td><%= course.category.name %></td>
      <td><%= course.name %></td>
      <td><%= course.description %></td>
      <td class="img-medium">
        <%= image_tag course.image.url if course.image? %>
      </td>
      <td class="index_column">
        <%= link_to t("edit"), edit_course_path(course) %>
      </td>
      <%= render "layouts/table_row", obj: course,
        path: :course_path %>
    </tr>
  <% end %>
</table>
<%= paginate @courses, theme: "twitter-bootstrap-3" %>
