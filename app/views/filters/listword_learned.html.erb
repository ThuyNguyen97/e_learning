<%= render "static_pages/menu" %>
<table class="table table-bordered">
  <thead>
    <tr>
      <th><%= t ".word" %></th>
      <th><%= t ".meaning" %></th>
    </tr>
  </thead>
  <tbody>
    <% if @status == Settings.status_learn %>
      <% @arr.each do |answer| %>
        <tr>
          <td><%= answer.content %></td>
          <td><%= answer.question.meaning %></td>
        </tr>
      <% end %>
      <%= paginate @arr, theme: "twitter-bootstrap-3" %>
    <% else %>
      <% @unlearned.each do |unlearned| %>
        <% if unlearned.correct %>
          <tr>
            <td><%= unlearned.content %></td>
            <td><%= unlearned.question.meaning %></td>
          </tr>
        <% end %>
      <% end %>
      <%= paginate @unlearned, theme: "twitter-bootstrap-3" %>
    <% end %>
  </tbody>
</table>
