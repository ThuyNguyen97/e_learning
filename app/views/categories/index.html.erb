<% provide :title, t(".all") %>
<h1><%= t ".all" %></h1>
<div class="row">
  <%= render "layouts/menu" %>
  <div class="col-md-8">
    <table>
      <tr>
        <th><%= t ".name" %></th>
        <th><%= t ".description" %></th>
        <th><%= t ".edit" %></th>
        <th><%= t ".delete" %></th>
      </tr>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.name %></td>
          <td><%= category.description %></td>
          <td>
            <%= link_to t(".edit"), edit_category_path(category) %>
          </td>
          <td>
            <%= link_to t(".delete"), category,
              method: :delete, data: { confirm: t(".sure") } %>
          </td>
        </tr>
      <% end %>
    </table>
    <%= paginate @categories, theme: "twitter-bootstrap-3" %>
  </div>
</div>
