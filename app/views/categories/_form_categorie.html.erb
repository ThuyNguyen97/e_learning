<%= form_for @category do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <%= f.label :name %>
  <%= f.text_field :name, class: "form-control" %>

  <%= f.label :description %>
  <%= f.text_field :description, class: "form-control" %> 

  <%= f.submit yield(:submit), class: "btn btn-primary" %>
<% end %>