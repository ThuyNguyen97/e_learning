<% provide :title, t(".title") %>
<h1><%= t ".title" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="avatar">
      <%= form_for @user do |f| %>
        <%= render "shared/error_messages", object: f.object %>
        <span class="picture">
          <% unless @user.avatar.present? %>
            <%= image_tag "default-avatar.jpg", class: "img-size-large",
              alt: t(".avatar") %>
          <% else %>
            <%= image_tag @user.avatar.url, class: "img-size-large",
              alt: t(".avatar") %>
          <% end %>
        </span>
        <%= f.file_field :avatar, accept: "image/jpeg,image/gif,image/png" %>

        <%= f.label t(".name") %>
        <%= f.text_field :name, class: "form-control" %>

        <%= f.label t(".email") %>
        <%= f.email_field :email, class: "form-control" %>

        <%= f.label t(".password") %>
        <%= f.password_field :password, class: "form-control" %>

        <%= f.label t(".password_confirmation") %>
        <%= f.password_field :password_confirmation, class: "form-control" %>

        <%= f.submit t(".save"), class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
